<% provide(:title, 'Edit publisher') %>
<h1 class="title">Edit publisher</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@publisher) do |f| %>
      <%= render 'shared/error_messages', obj: @publisher %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter publisher name', autofocus: true, class: 'form-control'%>

      <%= f.submit "Update publisher information", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p><%= link_to 'Cancel and return to publisher information', @publisher %></p>
  </div>
</div>
