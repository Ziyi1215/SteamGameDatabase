<h1 class="title">Publishers</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New publisher', new_publisher_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr class="show-list">
        <td width=40%><%= publisher.name %></td>
        <td width=20%><%= link_to 'Show', publisher %></td>
        <td width=20%><%= link_to 'Edit', edit_publisher_path(publisher) %></td>
        <td width=20%><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>