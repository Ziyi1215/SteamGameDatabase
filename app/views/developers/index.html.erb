<h1 class="title">Developers</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New developer', new_developer_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr class="show-list">
        <td width=40%><%= developer.name %></td>
        <td width=20%><%= link_to 'Show', developer %></td>
        <td width=20%><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td width=20%><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>