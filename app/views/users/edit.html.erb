<% provide(:title, 'Edit your profile') %>
<h1 class="title">Edit your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', obj: @user %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: 'Enter first name', autofocus: true, class: 'form-control'%>

      <%= f.label :last_name %>
      <%= f.text_field :last_name , placeholder: 'Enter last name', class: 'form-control'%>

      <%= f.submit "Update profile", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p><%= link_to 'Cancel and return to profile page', @user %></p>
  </div>
</div>
