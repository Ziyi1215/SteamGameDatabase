<h1 class="title">Users</h1>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Email</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="show-list">
        <td width=33%><%= user.email %></td>
        <td width=33%><%= "#{user.first_name} #{user.last_name}" %></td>
        <td width=11%><%= link_to 'Show', user %></td>
        <td width=11%><%= link_to 'Edit', edit_user_path(user) %></td>
        <td width=11%><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
