<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
<div class="profile">
  <% provide(:title, "Dear #{@user.first_name}") %>
  <h1 style="margin-top: 5%">
    Welcome, 
    <%= @user.first_name %>
    <%= @user.last_name %>
  </h1>
  </br>
  <p class="show">
    <strong>Email:</strong>
   <%= @user.email %>
  </p>
  <div class="users">
  <%= link_to 'Edit your profile', edit_user_path(@user) %> | 
  <!--<%= link_to 'Change your password', '#' %>-->
  </div>
  
  <br></br>
  
  <button class="collapsible"><strong>Antenna:</strong><br></button>
  <div class="content">
    <p><%= render 'form_antenna' %></p>
    <%= link_to 'Edit Antenna Channel', antenna_path(@user.id) %> 
    <br></br>
  </div>
  
  <button class="collapsible"><strong>Device:</strong><br></button>
  <div class="content">
    <p><%= render 'form_device' %></p>
    <%= link_to 'Edit your Devices', own_device_path(@user.id) %>
    <br></br>
  </div>
  
  <button class="collapsible"><strong>Set top box:</strong><br></button>
  <div class="content">
    <p><%= render 'form_box' %></p>
    <%= link_to 'Edit your Set Top Boxes', own_box_path(@user.id) %> 
    <br></br>
  </div>
</div>

<br></br>
<%= link_to "Calculate", calculator_path(current_user),class: "btn btn-primary", style: "color: #fff" %>

<script>
var coll = document.getElementsByClassName("collapsible");
var i;

for (i = 0; i < coll.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content = this.nextElementSibling;
    if (content.style.display === "block") {
      content.style.display = "none";
    } else {
      content.style.display = "block";
    }
  });
}
</script>
</body>

</html>
