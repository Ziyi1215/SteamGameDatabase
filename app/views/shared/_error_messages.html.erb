
<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Failed, <%= pluralize(obj.errors.count, "error") %> occur(s).
    </div>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
