<% provide(:title, 'Edit language') %>
<h1 class="title">Edit language</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@language) do |f| %>
      <%= render 'shared/error_messages', obj: @language %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter language name', autofocus: true, class: 'form-control'%>

      <%= f.submit "Update language information", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p><%= link_to 'Cancel and return to language information', @language %></p>
  </div>
</div>
