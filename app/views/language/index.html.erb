<h1 class="title">Languages</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New language', new_language_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr class="show-list">
        <td width=40%><%= language.name %></td>
        <td width=20%><%= link_to 'Show', language %></td>
        <td width=20%><%= link_to 'Edit', edit_language_path(language) %></td>
        <td width=20%><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @languages %>