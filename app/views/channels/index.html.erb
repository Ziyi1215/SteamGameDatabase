<h1 class="title">Channels</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New Channel', new_channel_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr class="show-list">
        <td width=40%><%= channel.name %></td>
        <td width=20%><%= link_to 'Show', channel %></td>
        <td width=20%><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td width=20%><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>