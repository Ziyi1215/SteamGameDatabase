<html>

<head>
  <script>
      function myFunction1() {
          document.getElementById("myDropdown1").classList.toggle("show");
      }
      function filterFunction1() {
          var input, filter, ul, li, a, i;
          input = document.getElementById("myInput1");
          filter = input.value.toUpperCase();
          div = document.getElementById("myDropdown1");
          li = div.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
              txtValue = li[i].textContent || li[i].innerText;
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                  li[i].style.display = "";
              } else {
                  li[i].style.display = "none";
              }
          }
      }
      function myFunction2() {
          document.getElementById("myDropdown2").classList.toggle("show");
      }
      function filterFunction2() {
          var input, filter, ul, li, a, i;
          input = document.getElementById("myInput2");
          filter = input.value.toUpperCase();
          div = document.getElementById("myDropdown2");
          li = div.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
              txtValue = li[i].textContent || li[i].innerText;
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                  li[i].style.display = "";
              } else {
                  li[i].style.display = "none";
              }
          }
      }
      function myFunction3() {
          document.getElementById("myDropdown3").classList.toggle("show");
      }
      function filterFunction3() {
          var input, filter, ul, li, a, i;
          input = document.getElementById("myInput3");
          filter = input.value.toUpperCase();
          div = document.getElementById("myDropdown3");
          li = div.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
              txtValue = li[i].textContent || li[i].innerText;
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                  li[i].style.display = "";
              } else {
                  li[i].style.display = "none";
              }
          }
      }
  </script>
</head>

<body>
<%= form_for(@game) do |f| %>
  <%= render 'shared/error_messages', obj: @game %>

  <%= f.label :name %>
  <%= f.text_field 'name', placeholder: 'Enter game name', autofocus: true, class: 'form-control'%>
  <%= f.label :price %>
  <%= f.number_field 'price', step: :any, autofocus: true, class: 'form-control'%>

  <% if @languages == nil %>
    <span>No available language.</span>
    <br></br>
  <% else %>
    <h4>Languages</h4>
    <div class="wrapper dropdown-area">
      <div class="btn-group">
        <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select supported languages <span class="caret"></span></button>
        <ul id="myDropdown1" style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
          <input type="text" placeholder="Search.." id="myInput1" onkeyup="filterFunction1()" class="search">
          <% @languages.each do |language| %>
            <li class="dropdown-list">
              <%= label_tag do %>
                <% if !@game_languages.nil? %>
                  <%= check_box_tag "languages[]", language.id, @game_languages.include?(language), class: "multi-checkbox"%>
                <% else %>
                  <%= check_box_tag "languages[]", language.id, false, class: "multi-checkbox"%>
                <% end %>
                <%= language.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <% if @developers == nil %>
    <span>No available developer.</span>
    <br></br>
  <% else %>
    <h4>Developer</h4>
    <div class="wrapper dropdown-area">
      <div class="btn-group">
        <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the developer <span class="caret"></span></button>
        <ul id="myDropdown2" style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
          <input type="text" placeholder="Search.." id="myInput2" onkeyup="filterFunction2()" class="search">
          <% @developers.each do |developer| %>
            <li class="dropdown-list">
              <%= label_tag do %>
                  <%= check_box_tag "developer_id", developer.id, false, class: "multi-checkbox"%>
                <%= developer.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if @publishers == nil %>
    <span>No available publisher.</span>
    <br></br>
  <% else %>
    <h4>Publisher</h4>
    <div class="wrapper dropdown-area">
      <div class="btn-group">
        <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the publisher <span class="caret"></span></button>
        <ul id="myDropdown3" style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
          <input type="text" placeholder="Search.." id="myInput3" onkeyup="filterFunction3()" class="search">
          <% @publishers.each do |publisher| %>
            <li class="dropdown-list">
              <%= label_tag do %>
                  <%= check_box_tag "publisher_id", publisher.id, false, class: "multi-checkbox"%>
                <%= publisher.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>

</body>
</html>
