<h1 class="title">Games</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New game', new_game_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr class="show-list">
        <td width=40%><%= game.name %></td>
        <td width=20%><%= link_to 'Show', game %></td>
        <td width=20%><%= link_to 'Edit', edit_game_path(game) %></td>
        <td width=20%><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>